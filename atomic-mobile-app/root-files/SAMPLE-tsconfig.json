{
  "compilerOptions": {
    "module": "esnext",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "strictNullChecks": false,
    "typeRoots": ["./src/types/types"],
    "baseUrl": "./src",
    "paths": {
      "react-native-calendars": ["node_modules/@types/react-native-calendars"],
      "@assets/*": ["./assets/*"],
      "@screens/*": ["./Screens/*"],
      "@components/*": ["./components/*"],
      "@navigation/*": ["./Screens/Navigation/*"],
      "@progress/*": ["./Screens/Progress/*"],
      "@profile/*": ["./Screens/Profile/*"],
      "@post/*": ["./Screens/Post/*"],
      "@graphql/*": ["./graphql/*"],
      "@models": ["./models"],
      "@realm/*": ["./realm/*"],
      "@dataTypes/*": ["./dataTypes/*"],
      "@theme/*": ["./theme/*"],
      "@types/*": ["./types/types/*"],
      "@utils/*": ["./utils/*"],
      "@constants/*": ["./constants/*"],
      "@app/*": ["./*"]
    },
    "target": "esnext"
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
